doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(rel='stylesheet' href='/css/style.css')
      title cart
  
  body
   h1 Checkout 
   h1 logged in as: #{currentUser.name}
   h2 total quantity: #{currentUser.totalQuantity}
   section

   div.cart_container
    each item in currentUser.cart
     div.box
      p shirt name : #{item.shirt.size}
      p Shirt price: #{item.shirt.price}
      p quantity: #{item.quantity}
      a.delete remove item

