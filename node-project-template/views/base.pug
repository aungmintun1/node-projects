doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(rel='stylesheet' href='/css/style.css')
      title T-Shirt Store
  
  body
   header.header
    nav
     ul
      li
        a(href="#home") profile
      li
        a(href=`/cart/${user.id}`) cart
      li
        a(href="#contact") login

   h1 T-Shirt Store
   h2 logged in as: #{user.name}

   div.cart_container
    each shirt in shirts   
     div.box
      p Shirt price: #{shirt.price}
      p Shirt size: #{shirt.size}
      button.add_btn(data-shirt-id=shirt.id , data-quantity=1) add to cart
      div.dropdown
       button#dropbtn.dropbtn Quantity: 1
        
   script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.5/axios.min.js')
   script(type='module' src='/js/addCart.js')
   script(type='module' src='/js/dropDown.js')
     
  

  