doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(rel='stylesheet' href='/css/base.css')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='stylesheet' href='/css/header.css')
     
      title T-Shirt Store
  
  body
   header.header
    nav
     ul
      li
        a(href='/') shop
      li
        a(href=`/cart/${user.id}`) cart
      li
        a(href="#contact") login

   block content
    h1 T-Shirt Store
    h2 logged in as: #{user.name}
 
    div.cart_container
     each shirt in shirts   
      div.box
       a(href=`/shirt/${shirt.id}`) 
        p Shirt price: #{shirt.name}
        p Shirt size: #{shirt.price}


      //-  button.add_btn(data-shirt-id=shirt.id , data-quantity=1) add to cart
      //-  div.dropdown
      //-   button#dropbtn.dropbtn Quantity: 1
        

   script(src='/js/bundle.js')
   script(src='/js/dropDown.js')
     
  

  